    <!-- Partículas gamer con canvas -->
    <canvas id="gamerParticles" style="position:fixed;top:0;left:0;width:100vw;height:100vh;z-index:-1;pointer-events:none;"></canvas>
    <script>
        // Carrusel simple
        let currentSlide = 0;
        const slides = document.getElementById('slides');
        const totalSlides = slides.children.length;

        function showSlide(index) {
            if (index < 0) currentSlide = totalSlides - 1;
            else if (index >= totalSlides) currentSlide = 0;
            else currentSlide = index;
            slides.style.transform = `translateX(-${currentSlide * 100}%)`;
            updateActiveSlide();
        }

        function moveSlide(step) {
            showSlide(currentSlide + step);
        }

        // Añadir clase activa a la slide visible
        function updateActiveSlide() {
            const slideEls = document.querySelectorAll('.slide');
            slideEls.forEach((el, idx) => {
                if(idx === currentSlide) el.classList.add('active');
                else el.classList.remove('active');
            });
        }

        // Inicializar la clase activa al cargar
        document.addEventListener('DOMContentLoaded', () => {
            showSlide(0);
        });

        // Auto-slide
        setInterval(() => moveSlide(1), 5000);

        // Scroll suave para navegación interna
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if(target) target.scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Mejorar accesibilidad del carrusel con teclado
        document.addEventListener('keydown', function(e) {
            if(document.activeElement.tagName === 'BODY') {
                if(e.key === 'ArrowLeft') moveSlide(-1);
                if(e.key === 'ArrowRight') moveSlide(1);
            }
        });

        // Mostrar enlace de salto al contenido al enfocar
        const skipLink = document.querySelector('a[href="#mainContent"]');
        skipLink.addEventListener('focus', () => {
            skipLink.style.left = '20px';
            skipLink.style.width = 'auto';
            skipLink.style.height = 'auto';
        });
        skipLink.addEventListener('blur', () => {
            skipLink.style.left = '-999px';
            skipLink.style.width = '1px';
            skipLink.style.height = '1px';
        });

        // Modo oscuro
        const darkModeBtn = document.getElementById('darkModeToggle');
        darkModeBtn.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            localStorage.setItem('darkMode', document.body.classList.contains('dark-mode'));
        });
        if(localStorage.getItem('darkMode') === 'true') {
            document.body.classList.add('dark-mode');
        }

        // Partículas tipo neón
        const canvas = document.getElementById('gamerParticles');
        const ctx = canvas.getContext('2d');
        let particles = [];
        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();
        function randomColor() {
            const colors = ['#ff4d6d', '#6366f1', '#25d366', '#fff7ed', '#ffe0e6'];
            return colors[Math.floor(Math.random() * colors.length)];
        }
        function createParticle() {
            return {
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                r: Math.random() * 2 + 1,
                dx: (Math.random() - 0.5) * 0.6,
                dy: (Math.random() - 0.5) * 0.6,
                color: randomColor(),
                alpha: Math.random() * 0.5 + 0.3
            };
        }
        function drawParticles() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            for (let p of particles) {
                ctx.save();
                ctx.globalAlpha = p.alpha;
                ctx.shadowColor = p.color;
                ctx.shadowBlur = 12;
                ctx.beginPath();
                ctx.arc(p.x, p.y, p.r, 0, 2 * Math.PI);
                ctx.fillStyle = p.color;
                ctx.fill();
                ctx.restore();
                p.x += p.dx;
                p.y += p.dy;
                if (p.x < 0 || p.x > canvas.width || p.y < 0 || p.y > canvas.height) {
                    Object.assign(p, createParticle());
                    p.x = Math.random() * canvas.width;
                    p.y = Math.random() * canvas.height;
                }
            }
            requestAnimationFrame(drawParticles);
        }
        // Inicializar partículas
        particles = Array.from({length: 60}, createParticle);
        drawParticles();
    </script>
</body>
</html>
